{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@ui/*": ["src/shared/ui/*"],
      "@hooks/*": ["src/shared/hooks/*"],
      "@lib/*": ["src/shared/lib/*"],
      "@types/*": ["src/shared/types/*"],
      "@providers/*": ["src/shared/providers/*"],
      "@/*": ["src/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}